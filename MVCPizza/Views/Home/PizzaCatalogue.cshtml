@model IEnumerable<MVCPizza.Models.PizzaModel>

@{
    ViewBag.Title = "Catalogue";
}

<h2>Pizza Catalogue</h2>

<p>
    @Html.ActionLink("Create New", "AddPizza")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PizzaID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PizzaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PizzaSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PizzaPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="table-striped">
        <td>
            @Html.DisplayFor(modelItem => item.PizzaID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PizzaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PizzaSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PizzaPrice)
        </td>
    </tr>
}

</table>
